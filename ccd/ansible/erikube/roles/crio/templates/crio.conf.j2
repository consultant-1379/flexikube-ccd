# CCD specific configurations
[crio]
storage_driver="overlay"

[crio.image]
pause_image = "{{ erikube_pause_image }}"

[crio.runtime]
conmon_cgroup = "pod"
cgroup_manager = "systemd"
default_capabilities = [
	  "CHOWN",
	  "DAC_OVERRIDE",
	  "FSETID",
	  "FOWNER",
	  "SETGID",
	  "SETUID",
	  "SETPCAP",
	  "NET_BIND_SERVICE",
	  "NET_RAW",
	  "KILL",
	  "SYS_ADMIN",
]

[crio.runtime.workloads.management]
activation_annotation = "ericsson.ccd.workload.io/management"
annotation_prefix= "resources.ccd.workload.io"

[crio.runtime.workloads.management.resources]
cpushares = 0
cpuset = ""

[crio.runtime.runtimes.runc]
monitor_exec_cgroup = "container"
